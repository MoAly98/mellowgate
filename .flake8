[flake8]
max-line-length = 88
extend-ignore = E203, W503
per-file-ignores =
    **/__init__.py:F401
    src/mellowgate/__init__.py:F401
    src/mellowgate/*/__init__.py:F401
    test_*.py:E402
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    .pixi,
    learning
